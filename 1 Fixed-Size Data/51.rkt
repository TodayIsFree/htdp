(define (traffic-light-next s)
  (cond
    [(string=? "red" s) "green"]
    [(string=? "green" s) "yellow"]
    [(string=? "yellow" s) "red"]))
(define BACKGROUND (empty-scene 100 100))
(define (DOT s)
  (circle 10 "solid" (traffic-light-next s)))
(define (place-at s)
  (place-image (DOT s) 50 50 BACKGROUND))
(define (main s)
  (big-bang s
    [on-tick traffic-light-next]
    [to-draw place-at]))